<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd-MMM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="File" fileName="logs/test.log">
			<PatternLayout
				pattern="%d{dd-MMM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>